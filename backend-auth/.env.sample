# Public base URL of this backend (for verification/reset links)
PUBLIC_BASE_URL=https://your-backend.example.com

# CORS origin of the local app
CORS_ALLOW_ORIGINS=http://localhost:8501

# SMTP for emails (Brevo or MailHog)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=YOUR_BREVO_USERNAME
SMTP_PASS=YOUR_BREVO_PASSWORD
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=KIKA

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# Tokens
JWT_SECRET=super_long_random_string_at_least_32_chars
JWT_EXPIRE_MIN=60
RESET_TOKEN_EXPIRE_MIN=30

# Admin API/CLI
ADMIN_API_KEY=a_long_admin_key_for_protected_routes
